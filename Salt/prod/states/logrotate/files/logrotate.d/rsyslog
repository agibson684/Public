/var/log/syslog {
        rotate 4
        create
        daily
        
        notifempty
        delaycompress
        compress
	size 5M
        postrotate
                invoke-rc.d rsyslog rotate > /dev/null
        endscript
}
/var/log/catchall.log {
	rotate 3
        create
	daily
	notifempty
	delaycompress
	compress
	size 5M
	postrotate
		invoke-rc.d rsyslog rotate > /dev/null
	endscript
}
