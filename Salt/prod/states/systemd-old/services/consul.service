[Unit]
Description=Consul Daemon
Requires=network-online.target
After=syslog.target network-online.target
Documentation=https://www.consul.io/intro/getting-started/agent.html

[Service]
User=consul
Type=simple
ExecStart=/usr/local/bin/consul agent -config-dir=/etc/consul/consul.d
Restart=on-failure
StandardOutput=syslog

[Install]
WantedBy=multi-user.target
